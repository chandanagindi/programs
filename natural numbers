import java.util.*;
public class Sum
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=0;
        for(int i=1;i<=a;i++)
        {
            b=b+i;
            if(i==a)
            {
                System.out.println(b);
            }
        }
    }
}
